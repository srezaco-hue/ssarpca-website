<script>
(function(){
  // Helpers
  const INR = (n) => (isFinite(n) ? Math.max(0, Math.round(n)).toLocaleString("en-IN") : "—");
  const clamp = (n) => (isFinite(n) ? n : 0);
  const n0 = (id) => clamp(parseFloat((document.getElementById(id)?.value || "0").trim()));
  const isResident = () => (document.getElementById("assessee").value || "").startsWith("resident");

  // Assumptions for FY 2025-26 and FY 2026-27 (same unless notified)
  const stdDeduction = { old: 50000, new: 75000 };

  // Old slabs (under 60)
  const slabsOld = [
    { upTo: 250000, rate: 0.00 },
    { upTo: 500000, rate: 0.05 },
    { upTo: 1000000, rate: 0.20 },
    { upTo: Infinity, rate: 0.30 }
  ];

  // New slabs FY 2025-26 (Budget 2025 style) – assumed same for FY 2026-27
  const slabsNew = [
    { upTo: 400000, rate: 0.00 },
    { upTo: 800000, rate: 0.05 },
    { upTo: 1200000, rate: 0.10 },
    { upTo: 1600000, rate: 0.15 },
    { upTo: 2000000, rate: 0.20 },
    { upTo: 2400000, rate: 0.25 },
    { upTo: Infinity, rate: 0.30 }
  ];

  // 87A rebate
  const rebateOld = { threshold: 500000, max: 12500 };
  const rebateNew = { threshold: 1200000, max: Infinity }; // effectively full rebate up to threshold

  function slabTax(taxable, slabArr){
    let t = Math.max(0, taxable);
    let remaining = t, prev = 0, tax = 0;
    const lines = [];
    for (const s of slabArr){
      const upper = s.upTo;
      const band = Math.min(remaining, upper - prev);
      if (band > 0){
        const bandTax = band * s.rate;
        tax += bandTax;
        lines.push({ from: prev, to: upper, amount: band, rate: s.rate, tax: bandTax });
        remaining -= band;
      }
      prev = upper;
      if (remaining <= 0) break;
    }
    return { tax, lines };
  }

  function applyRebate(baseTax, taxableIncome, rule){
    if (!isResident()) return { taxAfter: baseTax, rebate: 0 };
    if (taxableIncome <= rule.threshold){
      const rebate = Math.min(baseTax, rule.max);
      return { taxAfter: baseTax - rebate, rebate };
    }
    return { taxAfter: baseTax, rebate: 0 };
  }

  function breakupTable(lines){
    if (!lines?.length) return "<div class='tiny'>No slab tax (taxable income is 0).</div>";
    let html = "<table><thead><tr><th>Slab</th><th class='right'>Amount</th><th class='right'>Rate</th><th class='right'>Tax</th></tr></thead><tbody>";
    for (const l of lines){
      const to = (l.to === Infinity) ? "Above" : l.to;
      const slabLabel = (to === "Above") ? `₹ ${INR(l.from)}+` : `₹ ${INR(l.from)} – ₹ ${INR(to)}`;
      html += `<tr>
        <td>${slabLabel}</td>
        <td class="right">₹ ${INR(l.amount)}</td>
        <td class="right">${Math.round(l.rate*100)}%</td>
        <td class="right">₹ ${INR(l.tax)}</td>
      </tr>`;
    }
    html += "</tbody></table>";
    return html;
  }

  // Capital Gains (basic): STCG111A @20%; LTCG112A @12.5% above 1.25L
  function calcCGTax(){
    const st = Math.max(0, n0("stcg111a"));
    const lt = Math.max(0, n0("ltcg112a"));
    const ltExempt = 125000;
    const ltTaxable = Math.max(0, lt - ltExempt);

    const taxST = st * 0.20;
    const taxLT = ltTaxable * 0.125;
    const base = taxST + taxLT;
    const cess = base * 0.04;
    const total = base + cess;

    return { st, lt, ltExempt, ltTaxable, taxST, taxLT, base, cess, total };
  }

  function calcNormalIncomeBase(){
    // Heads (normal)
    const salary = Math.max(0, n0("salary"));
    const hp = n0("hp");         // can be negative
    const bp = n0("bp");
    const os = n0("os");

    return { salary, hp, bp, os };
  }

  function calcOld(){
    const { salary, hp, bp, os } = calcNormalIncomeBase();

    // Old exemptions from salary
    const hra = Math.max(0, n0("old_hraEx"));
    const lta = Math.max(0, n0("old_ltaEx"));
    const otherEx = Math.max(0, n0("old_otherEx"));
    const ptax = Math.max(0, n0("old_ptax"));

    const salaryAfterEx = Math.max(0, salary - hra - lta - otherEx - ptax);

    // Standard deduction auto
    const std = stdDeduction.old;
    const netSalary = Math.max(0, salaryAfterEx - std);

    const gti = netSalary + hp + bp + os; // HP can reduce

    // Old deductions
    const d80c = Math.min(Math.max(0, n0("old_80c")), 150000);
    const d80ccd1b = Math.min(Math.max(0, n0("old_80ccd1b")), 50000);
    const d80d = Math.max(0, n0("old_80d"));
    const d24b = Math.max(0, n0("old_24b"));
    const empNps = Math.max(0, n0("old_empnps"));
    const otherDed = Math.max(0, n0("old_otherDed"));

    const deductions = d80c + d80ccd1b + d80d + d24b + empNps + otherDed;
    const taxable = Math.max(0, gti - deductions);

    const { tax: baseTax, lines } = slabTax(taxable, slabsOld);
    const { taxAfter, rebate } = applyRebate(baseTax, taxable, rebateOld);

    const cess = taxAfter * 0.04;
    const totalNormal = taxAfter + cess;

    return { std, salaryAfterEx, netSalary, gti, deductions, taxable, baseTax, rebate, taxAfter, cess, totalNormal, lines };
  }

  function calcNew(){
    const { salary, hp, bp, os } = calcNormalIncomeBase();

    // Standard deduction auto (new)
    const std = stdDeduction.new;
    const netSalary = Math.max(0, salary - std);

    const gti = netSalary + hp + bp + os;

    // New deductions (separate)
    const empNps = Math.max(0, n0("new_empnps"));
    const otherAllowed = Math.max(0, n0("new_allowedOther"));
    const deductions = empNps + otherAllowed;

    const taxable = Math.max(0, gti - deductions);

    const { tax: baseTax, lines } = slabTax(taxable, slabsNew);
    let { taxAfter, rebate } = applyRebate(baseTax, taxable, rebateNew);

    // Simple marginal relief near 12L (optional)
    const doMR = document.getElementById("marginalReliefOn").checked;
    if (doMR && isResident() && taxable > rebateNew.threshold){
      const cap = taxable - rebateNew.threshold;
      if (taxAfter > cap) taxAfter = cap;
    }

    const cess = taxAfter * 0.04;
    const totalNormal = taxAfter + cess;

    return { std, netSalary, gti, deductions, taxable, baseTax, rebate, taxAfter, cess, totalNormal, lines };
  }

  function render(){
    const fy = document.getElementById("fy").value;
    // show std deduction
    document.getElementById("stdShow").textContent =
      `Standard Deduction auto: Old ₹${INR(stdDeduction.old)} | New ₹${INR(stdDeduction.new)} (FY ${fy})`;

    const oldR = calcOld();
    const newR = calcNew();
    const cg = calcCGTax();

    const oldTotal = oldR.totalNormal + cg.total;
    const newTotal = newR.totalNormal + cg.total;

    document.getElementById("oldTotal").textContent = "₹ " + INR(oldTotal);
    document.getElementById("newTotal").textContent = "₹ " + INR(newTotal);

    document.getElementById("oldTiny").textContent = `Normal tax ₹ ${INR(oldR.totalNormal)} + CG ₹ ${INR(cg.total)}`;
    document.getElementById("newTiny").textContent = `Normal tax ₹ ${INR(newR.totalNormal)} + CG ₹ ${INR(cg.total)}`;

    // Summary rows
    const tb = document.getElementById("summaryBody");
    tb.innerHTML = `
      <tr><td>Standard Deduction (auto)</td><td class="right">₹ ${INR(oldR.std)}</td><td class="right">₹ ${INR(newR.std)}</td></tr>
      <tr><td>Gross Total Income (Normal heads)</td><td class="right">₹ ${INR(oldR.gti)}</td><td class="right">₹ ${INR(newR.gti)}</td></tr>
      <tr><td>Deductions considered (Normal)</td><td class="right">₹ ${INR(oldR.deductions)}</td><td class="right">₹ ${INR(newR.deductions)}</td></tr>
      <tr><td>Taxable Income (Normal)</td><td class="right">₹ ${INR(oldR.taxable)}</td><td class="right">₹ ${INR(newR.taxable)}</td></tr>
      <tr><td>Tax before Rebate (Normal)</td><td class="right">₹ ${INR(oldR.baseTax)}</td><td class="right">₹ ${INR(newR.baseTax)}</td></tr>
      <tr><td>Rebate u/s 87A (Normal)</td><td class="right">₹ ${INR(oldR.rebate)}</td><td class="right">₹ ${INR(newR.rebate)}</td></tr>
      <tr><td>Normal Tax (incl. cess)</td><td class="right">₹ ${INR(oldR.totalNormal)}</td><td class="right">₹ ${INR(newR.totalNormal)}</td></tr>
      <tr><td>Capital Gains Tax (incl. cess)</td><td class="right">₹ ${INR(cg.total)}</td><td class="right">₹ ${INR(cg.total)}</td></tr>
      <tr><td><b>Total Tax Payable</b></td><td class="right"><b>₹ ${INR(oldTotal)}</b></td><td class="right"><b>₹ ${INR(newTotal)}</b></td></tr>
    `;

    document.getElementById("oldBreakup").innerHTML = breakupTable(oldR.lines);
    document.getElementById("newBreakup").innerHTML = breakupTable(newR.lines);

    document.getElementById("cgBody").innerHTML = `
      <tr><td>STCG u/s 111A @20% (₹ ${INR(cg.st)})</td><td class="right">₹ ${INR(cg.taxST * 1.04)}</td><td class="right">₹ ${INR(cg.taxST * 1.04)}</td></tr>
      <tr><td>LTCG u/s 112A (Exempt ₹ ${INR(cg.ltExempt)}; Taxable ₹ ${INR(cg.ltTaxable)}) @12.5%</td>
          <td class="right">₹ ${INR(cg.taxLT * 1.04)}</td><td class="right">₹ ${INR(cg.taxLT * 1.04)}</td></tr>
      <tr><td><b>Total CG Tax (incl. cess)</b></td><td class="right"><b>₹ ${INR(cg.total)}</b></td><td class="right"><b>₹ ${INR(cg.total)}</b></td></tr>
    `;

    const bestPill = document.getElementById("bestPill");
    const bestBox = document.getElementById("bestBox");
    const bestText = document.getElementById("bestText");
    const bestSave = document.getElementById("bestSave");

    if (Math.abs(oldTotal - newTotal) < 1){
      bestPill.textContent = "Same tax";
      bestBox.style.display = "none";
    } else {
      const oldBetter = oldTotal < newTotal;
      const save = Math.abs(oldTotal - newTotal);
      bestPill.textContent = oldBetter ? "Old is better" : "New is better";
      bestBox.style.display = "flex";
      bestText.textContent = oldBetter ? "Old Regime is better" : "New Regime is better";
      bestSave.textContent = `Estimated savings: ₹ ${INR(save)}.`;
    }
  }

  function bind(){
    document.getElementById("taxForm").addEventListener("submit", (e)=> e.preventDefault());
    document.getElementById("btnCalc").addEventListener("click", (e)=>{ e.preventDefault(); render(); });
    document.getElementById("btnReset").addEventListener("click", (e)=>{
      e.preventDefault();
      document.getElementById("fy").value = "2025-26";
      document.getElementById("assessee").value = "resident_lt60";
      document.getElementById("salary").value = 1200000;

      document.getElementById("hp").value = 0;
      document.getElementById("bp").value = 0;
      document.getElementById("os").value = 0;

      document.getElementById("stcg111a").value = 0;
      document.getElementById("ltcg112a").value = 0;

      document.getElementById("old_hraEx").value = 0;
      document.getElementById("old_ltaEx").value = 0;
      document.getElementById("old_otherEx").value = 0;
      document.getElementById("old_ptax").value = 0;

      document.getElementById("old_80c").value = 150000;
      document.getElementById("old_80ccd1b").value = 0;
      document.getElementById("old_80d").value = 0;
      document.getElementById("old_24b").value = 0;
      document.getElementById("old_empnps").value = 0;
      document.getElementById("old_otherDed").value = 0;

      document.getElementById("new_empnps").value = 0;
      document.getElementById("new_allowedOther").value = 0;
      document.getElementById("marginalReliefOn").checked = true;

      render();
    });

    const ids = [
      "fy","assessee","salary","hp","bp","os","stcg111a","ltcg112a",
      "old_hraEx","old_ltaEx","old_otherEx","old_ptax",
      "old_80c","old_80ccd1b","old_80d","old_24b","old_empnps","old_otherDed",
      "new_empnps","new_allowedOther","marginalReliefOn"
    ];
    ids.forEach(id=>{
      const el = document.getElementById(id);
      if (!el) return;
      el.addEventListener("input", render);
      el.addEventListener("change", render);
    });

    render();
  }

  document.addEventListener("DOMContentLoaded", bind);
})();
</script>
